<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userViewModel"
            type="com.advance.mydrawing.models.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/lavender"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />

        <com.hanks.htextview.line.LineTextView
            android:id="@+id/textViewLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:textColor="@color/black"
            android:background="#D5D5FD"
            android:fontFamily="monospace"
            android:text="Your Drawing Book"
            app:animationDuration="1000"
            app:lineColor="#1367bc"
            app:lineWidth="@dimen/_14sdp" />



        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/recyclerView"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
          />

    </LinearLayout>
</layout>